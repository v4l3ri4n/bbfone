<!DOCTYPE html>
<html ng-app="bbfone">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="/node_modules/angular-material/angular-material.css">
    <link rel="stylesheet" href="/css/app.css">
    <title>Bbfone</title>
</head>
<body ng-controller="StatusCtrl" ng-cloak>

    <div layout="column">

        <md-toolbar>
            <div class="md-toolbar-tools">
                <h2 md-truncate flex>Bbfone : {{ hostname }}</h2>
            </div>
        </md-toolbar>

        <md-content layout-padding>
            <md-list>
                <md-subheader class="md-no-sticky">Informations</md-subheader>
                <md-list-item>
                    <md-icon>settings_ethernet</md-icon>
                    <p>IP address : {{ ip }}</p>
                </md-list-item>
                <md-list-item>
                    <md-icon>cast_connected</md-icon>
                    <p>{{Â connected ? 'Connected' : 'Not connected' }}</p>
                </md-list-item>
                <md-list-item>
                    <md-icon>play_arrow</md-icon>
                    <p>{{ streaming ? 'Playing stream !' : 'Not playing stream' }}</p>
                </md-list-item>
            </md-list>

            <div ng-if="volume !== null">
                <md-subheader class="md-no-sticky">Volume</md-subheader>

                <md-slider-container>
                    <md-slider flex md-discrete ng-model="volume" step="1" min="1" max="100" aria-label="rating"></md-slider>
                </md-slider-container>
            </div>

            <md-fab-speed-dial md-direction="up" class="md-fling menu">
                <md-fab-trigger>
                    <md-button class="md-fab" aria-label="Actions..."><md-icon>menu</md-icon></md-button>
                </md-fab-trigger>

                <md-fab-actions>
                    <md-button class="md-fab md-raised md-mini" aria-label="Shudown" ng-click="shutdown()">
                        <md-tooltip md-direction="right">Shutdown</md-tooltip>
                        <md-icon>power_settings_new</md-icon>
                    </md-button>

                    <md-button class="md-fab md-raised md-mini" aria-label="Reboot" ng-click="reboot()">
                        <md-tooltip md-direction="right">Reboot</md-tooltip>
                        <md-icon>autorenew</md-icon>
                    </md-button>
                </md-fab-actions>

            </md-fab-speed-dial>

        </md-content>
    </div>

    <!-- Angular Material requires Angular.js Libraries -->
    <script src="/node_modules/angular/angular.js"></script>
    <script src="/node_modules/angular-aria/angular-aria.js"></script>
    <script src="/node_modules/angular-animate/angular-animate.js"></script>
    
    <!-- Angular Material Library -->
    <script src="/node_modules/angular-material/angular-material.js"></script>
    
    <script src="/js/app.js"></script>

</body>
</html>
